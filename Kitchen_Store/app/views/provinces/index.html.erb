<h1>Listing provinces</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Pstrate</th>
    <th>Gstrate</th>
    <th>Hstrate</th>
    <th>Shipping days</th>
    <th>Shipping surcharge</th>
    <th>Created at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @provinces.each do |province| %>
  <tr>
    <td><%= province.name %></td>
    <td><%= province.pstRate %></td>
    <td><%= province.gstRate %></td>
    <td><%= province.hstRate %></td>
    <td><%= province.shipping_days %></td>
    <td><%= province.shipping_surcharge %></td>
    <td><%= province.created_at %></td>
    <td><%= link_to 'Show', province %></td>
    <td><%= link_to 'Edit', edit_province_path(province) %></td>
    <td><%= link_to 'Destroy', province, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

